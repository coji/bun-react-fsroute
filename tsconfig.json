{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "types": ["web", "bun-types"],
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"]
    },
    "allowJs": true,
    "sourceMap": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
